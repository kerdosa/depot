
<div class="depot_form">
	<%= form_tag do %>
		<fieldset>
			<legend>Please Log In</legend>
			
			<div>
				<label for="name">Name:</label>
				<%= text_field_tag :name, params[:name] %>
			</div>
			
			<div>
				<label for="passowrd">Password:</label>
				<%= password_field_tag :passowrd, params[:password] %>
			</div>
			
			<div>
				<%= submit_tag "Login" %>
			</div>
		</fieldset>
	<% end %>
</div>